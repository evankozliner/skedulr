<h3>Hi <%= @employee.first_name %></h3>
<p>Which business would you like to look at your shifts for?</p>
<% for business in @businesses do %>
  <div>
    <p><%= business.name %></p>
    <ul>
      <% if @employee.is_manager?(business.id) %>
        <li>
          <%= link_to "View Business", business_path(business.id) %>
        </li>
      <% end %>
      <li>
        <%= link_to "View Shifts", shifts_path(shift: {business_id: business.id}) %>
      </li>
      <li>
        <%= link_to "Remove", destroy_relation_path(business.id), method: :delete%>
      </li>
    </ul>
  </div>
<% end %>
<%= link_to "Add business", businesses_path %>
<br>
<%= link_to "Edit employee profile", edit_employee_path(@employee) %>
