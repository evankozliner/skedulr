<h1><%= @business.name %></h1>
<h3><%= @first_name %>'s Shifts</h3>
<span hidden id="hidden-business-id" data-business_id=<%= @business.id %>></span>

<div id="calender-container">
  <div id="calendar"></div>
</div>

<ul>
  <% @shifts.each do |shift| %>
  <li>
    <p> Start: <%= shift.start %> </p>
    <p> Stop: <%= shift.stop %> </p>
  </li>
  <% end %>
</ul>
<%= link_to "Create new shift", new_shift_path(shift: {business_id: @business.id}), class: "new_shift" %>
<br>
<%= link_to "Back to profile", employees_path %>
